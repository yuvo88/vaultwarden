<main class="container-xl">
    
    <div id="config-block" class="align-items-center p-3 mb-3 bg-secondary rounded shadow">
        <div>
            <h6 class="text-white mb-3">2FA Configuration</h6>
            <div class="card mb-3">
                <button id="b_authenticator" type="button" class="card-header text-start btn btn-link text-decoration-none" aria-expanded="false" aria-controls="g_authenticator" data-bs-toggle="collapse" data-bs-target="#g_authenticator" data-orig-value=""> Authenticator</button>
                <div id="g_authenticator" class="card-body collapse align-items-center" style="">
                    <div class="small text-white mb-3">
                        To enable time based authentictor
                    </div>
                    
                    <div class="qr_code m-auto w-50"></div>
                    <br/>
                    <h5 id="authenticator_code" class="mb-3 text-center"></h5>
                    <form class="form-inline w-50 m-auto" action="{{urlpath}}/admin/two-factor/authenticator" method="post">
                        <input type="hidden" name="key" id="Key">
                        <div class="m-auto w-fit-content input-group">
                            <input type="text" name="token" class="form-control conf-password">
                            <button type="submit" class="btn btn-outline-secondary input-group-text">Sumbit</button>                                    
                        </div>
                    </form>
                    <form class="form-inline w-50 m-auto" action="{{urlpath}}/admin/two-factor/disable" method="post">
                        <input type="hidden" name="type_" id="Type" value="{{authenticator_type}}">
                        <button type="submit" class="btn btn-outline-secondary input-group-text">Turn Off</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<script src="{{urlpath}}/vw_static/jquery-3.7.1.slim.js"></script>
<script src="{{urlpath}}/vw_static/jquery.qrcode.min.js"></script>
<script src="{{urlpath}}/vw_static/admin_twofactor.js"></script>