<main class="container-xl">
    
    <div id="config-block" class="align-items-center p-3 mb-3 bg-secondary rounded shadow">
        <div>
            <h6 class="text-white mb-3">2FA Configuration</h6>
            <div class="card mb-3">
                <button id="b_authenticator" type="button" class="card-header text-start btn btn-link text-decoration-none" aria-expanded="false" aria-controls="g_authenticator" data-bs-toggle="collapse" data-bs-target="#g_authenticator" data-orig-value=""> Authenticator</button>
                <div id="g_authenticator" class="card-body collapse align-items-center" style="">
                    <div class="small text-white mb-3">
                        To enable time based authentictor
                    </div>
                    
                    <div class="qr_code m-auto w-50"></div>
                    <h6 id="authenticator_code" class="mb-3 text-center"></h6>
                    <form class="form-inline" action="{{urlpath}}/admin/two-factor/authenticator" method="post">
                        <input type="hidden" name="key" id="Key">
                        <input type="text" name="token">
                        <input type="submit">
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
